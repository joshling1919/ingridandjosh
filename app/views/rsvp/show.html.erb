  <%= render "/nav" %>
  <main class="" id="main-collapse">
    <div class="row">
      <div class="col-xs-12">
        <div class="section-container-spacer">
          <h2>RSVP</h2>
        </div>
        <div class="section-container-spacer">
          <%= form_tag('/guests/search', method: :get, class: 'reveal-content') do %>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <%= text_field_tag "guest[name]", nil, placeholder: 'Your Name', class: 'form-control' %>
                </div>
                <%= submit_tag 'Search', class: 'btn btn-primary btn-lg' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </main>

