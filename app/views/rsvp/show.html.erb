  <%= render "/nav" %>
  <main class="" id="main-collapse">
    <div class="row">
      <div class="col-xs-12">
        <div class="section-container-spacer">
          <h2>RSVP</h2>
        </div>
        <div class="section-container-spacer">
          <%= form_tag('/guests/search', method: :get, class: 'reveal-content') do %>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <%= text_field_tag "guest[name]", nil, placeholder: 'Your Full Name', class: 'form-control' %>
                </div>
                <%= submit_tag 'Search', class: 'btn btn-primary btn-lg' %>
              </div>
            </div>
          <% end %>
          <% if @error %>
            <div class="search-error">
              Sorry, we couldn't find that name on the guest list. Please make sure you are entering your
              <strong>full name</strong>, or reach out to joshling1919@gmail.com to resolve this!
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </main>

